    <script>
        if (!String.prototype.includes) {
            String.prototype.includes = function () {
                'use strict';
                return String.prototype.indexOf.apply(this, arguments) !== -1;
            };
        }
        function ajaxRequest(type, url, requestData, element) {
            try {
                var result = null;
                var temp = "";
                var href = "";
                if (element != null && element != undefined) {
                    temp = element.innerHTML;
                    element.disabled = true;;
                    href = element.getAttribute("href");
                    element.removeAttribute("href");
                    element.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span><span class="">Loading</span>';
                }
                return res = new Promise(function (resolve, reject) {
                    $.ajax({

                        url: url,
                        type: type,
                        data: requestData,
                        success: function (data) {
                            if (element != null && element != undefined) {
                                element.setAttribute("href", href);
                                element.innerHTML = temp;
                                element.disabled = false;;
                            }
                            resolve(data);
                        },
                        error: function (err) {
                            if (element != null && element != undefined) {
                                element.setAttribute("href", href);
                                element.innerHTML = temp;
                                element.disabled = false;;
                            }
                            reject(err);
                        }
                    });
                });


            }
            catch (e) {
                console.log("headScript:AjaxRequest :" + e);
                //alert(e);
            }
            //return res.PromiseValue;
        }
        function ShowMessage(message, header, isSuccess) {
            try {
                if (isSuccess) {
                    $.toast({
                        heading: header,
                        text: message,
                        showHideTransition: 'slide',
                        position: 'toast-bottom-center',
                        icon: 'info'
                    });
                }
                else {
                    $.toast({
                        heading: header,
                        text: message,
                        showHideTransition: 'slide',
                        position: 'toast-bottom-center',
                        icon: 'error'
                    })
                }

            }
            catch (e) {
                console.log("headScript:ShowMessage :" + e);
                alert(e);
            }
        }

        function changeLanguage(language) {
            $('#culturField').val(language);
            $('form#culturForm').submit();
        }

        (function () {
            setSideMenuLinkToActive();

        })();
        function setSideMenuLinkToActive() {
            var currentUrl =   location.pathname;
            var links = $('.nav-sidebar li');
            var isSet = false;
            for (var i = 0; i < links.length; i++) {
                if (links[i].getElementsByTagName('a')[0].getAttribute('href').split('?')[0].toLowerCase() == currentUrl.toLowerCase()) {
                    links[i].style.background = '#b3aeae44';
                    isSet = true;
                }
            }
            if (!isSet) {
                for (var i = 0; i < links.length; i++) {
                    if (currentUrl.toLowerCase().includes(links[i].getElementsByTagName('a')[0].getAttribute('href').split('?')[0].toLowerCase() )) {
                        links[i].style.background = '#b3aeae44';
                        isSet = true;
                    }
                }
            }
        }

        $(document).ready(function () {
            addTimeZoneCookie();
        });

        $(window).on("unload", function (e) {
            addTimeZoneCookie();
        });

        function addTimeZoneCookie() {
            "use strict";
            var date = new Date();
            var timeZone = date.getTimezoneOffset();
            var expDate = new Date();
            expDate.setTime(8640000000000000);
            document.cookie = "webtimezone=" + timeZone + "; expires=" + expDate.toUTCString() + "; path=/;";
        };
    </script>


